{
  "name": "senpaibot2.0",
  "version": "0.3.0",
  "author": "Gavin L",
  "license": "GNU GPLv3",
  "description": "Our bot for our Discord server.",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "dev": "cross-env NODE_ENV=development npx ts-node src/index.ts",
    "build": "tsc && npm run copy-assets",
    "copy-assets": "mkdir -p dist/assets && cp -r src/assets/* dist/assets/",
    "start": "node dist/index.js",
    "format": "prettier --write ."
  },
  "dependencies": {
    "date-fns-tz": "^3.2.0",
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.3",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2"
  }
}
